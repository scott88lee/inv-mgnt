<html>
	<head>
		<!-- Standard Meta -->
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

		<title>SAMIMA!</title>
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css">
	</head>

	<body>
		<div class="ui secondary pointing menu">
			<a class="active item" data-tab="first" href="/">SAMIMA</a>
			<a class="item" data-tab="second">Reports</a>
			<a class="item" data-tab="third">Help</a>
			
			<div class="right menu">
				{{#if user_name}}

					<div class="ui simple dropdown item">
						{{user_name}} <i class="dropdown icon"></i>
						
						<div class="menu">
							<a class="item" href="/">Dashboard</a>
							<a class="item" href="/profile">Profile</a>
							<a class="item" href="/inbox">Inbox</a>
							<a class="item" href="/howto">Help</a>
						</div>
					</div>
					
					<a href="/logout" class="header item">Logout</a>

				{{else}}
					<a href="/register" class="header item">Register</a>
					<a href="/login" class="header item"> Login </a>
				{{/if}}
			</div>
		</div>

		<div class="ui segment">
			<div class="ui grid">
				<div class="four wide column">
					<div class="ui vertical menu">
						<div class="item">
							<div class="header">Sales & Purchases</div>
							<div class="menu">
								<a class="item">Record Sale</a>
								<a class="item" href="/purchases/add">Record Purchase</a>
							</div>
						</div>
						<div class="item">
							<div class="header">Management</div>
							<div class="menu">
								<a class="item" href="/products">List Products</a>

								<a class="item">Categories</a>
								<a class="item">Suppliers</a>
								<a class="item">Customers</a>
							</div>
						</div>
						<div class="item">
							<div class="header">Administration</div>
							<div class="menu">
								<a class="item">Payments</a>
								<a class="item">Budgets</a>
								<a class="item">Setup</a>
							</div>
						</div>
						<div class="item">
							<div class="header">Support</div>
							<div class="menu">
								<a class="item">E-mail Support</a>
								<a class="item">FAQs</a>
							</div>
						</div>
					</div>
				</div>	

				<div class="twelve wide stretched column">
					<div class="ui segment">
						{{{body}}}
					</div>
				</div>
			</div>
		</div>

		<script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity ="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>
	</body>
</html>